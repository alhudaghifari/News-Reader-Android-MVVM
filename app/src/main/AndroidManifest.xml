<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alhudaghifari.newstop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsTop">
        <activity
            android:name=".ui.detailwebview.DetailWebviewActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NewsTop.NoActionBar"  />
        <activity
            android:name=".ui.detail.DetailNewsActivity"
            android:exported="true"
            android:label="@string/detail_news"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NewsTop.NoActionBar" />
        <activity
            android:name=".ui.favorite.FavoriteActivity"
            android:exported="true"
            android:label="@string/favorite"
            android:parentActivityName=".ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NewsTop.NoActionBar" />
        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NewsTop.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>